.btn-round {
    transition: all 0.2s;
    border-radius: 20px;
    width: 120px;
    height: 40px;
    border-width: 0;
    background-color: darkgray;
    color: black;
}

.btn-round:hover {
    background-color: gray;
    border-radius: 8px;
}

.btn-round:active {
    color: white;
    background-color: dimgray;
}

.btn-primary {
    transition: all 0.2s;
    background-color: dodgerblue;
    color: white;
}

.btn-primary:hover {
    background-color: royalblue;
}

.btn-primary:active {
    background-color: darkblue;
}

.label {
    padding-left: 12px;
    padding-right: 12px;
    -unity-text-align: middle-center;
    -unity-font-style: normal;
}

.label-title {
    padding-left: 12px;
    padding-right: 12px;
    -unity-font-style: bold;
    font-size: 14px;
    color: rgba(238, 69, 15, 255);
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
}

.content-container {
    margin-top: 12px;
    margin-bottom: 20px;
    
    flex-wrap: wrap;
    justify-content: center;
}

.button-container {
    flex-wrap: wrap;
    flex-direction: row;
}

.root {
    transition: all 0.2s;
    background-color: rosybrown;
    height: 140px;
    padding-top: 10px;
    padding-bottom: 10px;
    border-radius: 20px;
}

.root:focus, .root:hover {
    background-color: mediumseagreen;
}
